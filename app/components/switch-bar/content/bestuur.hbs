{{/each}}
{{#each @mandataris.een_bcsd as |een_bcsd|}}
<p>{{een_bcsd.voornaam}} {{een_bcsd.achternaam}}, <span class="au-u-medium">{{een_bcsd.fractie.value}}</span></p>
{{/each}}
{{else}}
<AuPill @skin="action">
  <AuIcon @icon="alert-triangle" @alignment="left" @size="medium" @ariaHidden={{true}} /> Geen beschikbaar informatie
</AuPill>
{{/if}}